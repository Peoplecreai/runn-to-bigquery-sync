# Clockify API Configuration (Primary data source)
# Get your API key from: https://app.clockify.me/user/settings (API tab)
CLOCKIFY_API_KEY=your_clockify_api_key_here

# Your Clockify Workspace ID
# Find it in Settings > Workspace Settings, or in the URL when you're in workspace settings
CLOCKIFY_WORKSPACE_ID=your_workspace_id_here

# Optional: Clockify API base URL (default: https://api.clockify.me/api)
# CLOCKIFY_BASE_URL=https://api.clockify.me/api

# Optional: Clockify Reports API URL (default: https://reports.api.clockify.me)
# CLOCKIFY_REPORTS_URL=https://reports.api.clockify.me

# Optional: Page size for pagination (default: 200)
# CLOCKIFY_PAGE_SIZE=200

# Runn API Configuration (Only for Time Off data)
# Get your API token from Runn dashboard
RUNN_API_TOKEN=your_runn_api_token_here

# Optional: Runn API base URL (default: https://api.runn.io)
# RUNN_BASE_URL=https://api.runn.io

# Optional: Runn API version (default: 1.0.0)
# RUNN_ACCEPT_VERSION=1.0.0

# Optional: Runn pagination limit (default: 200)
# RUNN_LIMIT=200

# BigQuery Configuration
BQ_PROJECT=your-gcp-project-id
BQ_DATASET=people_analytics

# Application Configuration
ENDPOINTS_FILE=endpoints.yaml
PORT=8080
